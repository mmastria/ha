<INDIDriver>

<defSwitchVector device="RollOff Roof" name="CONNECTION" label="Connection" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="RollOff Roof" name="DEVICE_PORT" label="Ports" group="Connection" state="Idle" perm="rw" timeout="0">
    <defText name="PORT" label="Port">
/dev/ttyACM0
    </defText>
</defTextVector>


<defLightVector device="RollOff Roof" name="OPENED" label="Opened" group="Main Control" state="Idle" perm="ro" rule="OneOfMany" timeout="1">
    <defLight name="OPENED_ON" label="Roof Opened">
    <indiduino pin="10"/>
OK
    </defLight>
</defLightVector>

<defLightVector device="RollOff Roof" name="CLOSED" label="Closed" group="Main Control" state="Idle" perm="ro" rule="OneOfMany" timeout="1">
    <defLight name="CLOSED_ON" label="Roof Closed">
    <indiduino pin="11"/>
OK
    </defLight>
</defLightVector>

<defSwitchVector device="RollOff Roof" name="ROOF" label="Roof Switch" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="1">
    <defSwitch name="ROOF_ON" label="ON">
    <indiduino pin="9"/>
Off
    </defSwitch>
    <defSwitch name="DUMMY" label="OFF">
On
    </defSwitch>
</defSwitchVector>


</INDIDriver>
